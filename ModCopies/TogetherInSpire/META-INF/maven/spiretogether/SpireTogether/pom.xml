    <groupId>spiretogether</groupId>
    <artifactId>SpireTogether</artifactId>
    <name>Together in Spire</name>
    <version>6.4.20</version>

    <description>Join your friends in the Spire and defeat it together.</description>

    <properties>
        <maven.compiler.source>1.8</maven.compiler.source>
        <maven.compiler.target>1.8</maven.compiler.target>
        <SlayTheSpire.version>03-07-2022</SlayTheSpire.version>
        <ModTheSpire.version>3.19.1</ModTheSpire.version>
        <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
        <WorkshopContent.path>C:\SteamLibrary\steamapps\workshop\content\646570</WorkshopContent.path>
        <Libraries.path>E:\Marino\Projects\Together in Spire\Libraries</Libraries.path>
        <Mods.path>E:\Marino\Games\Slay The Spire\Game\mods</Mods.path>
    </properties>

    <dependencies>
        <!-- BASE DEPENDENCIES -->
        <dependency>
            <groupId>com.megacrit.cardcrawl</groupId>
