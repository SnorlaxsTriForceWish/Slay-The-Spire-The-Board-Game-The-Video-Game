        </dependency>
        <dependency>
            <groupId>packmaster</groupId>
            <artifactId>Packmaster</artifactId>
            <version>0.0.1</version>
            <scope>system</scope>
            <systemPath>${WorkshopContent.path}/2920075378/ThePackmaster.jar</systemPath>
        </dependency>
        <dependency>
            <groupId>duelistmod</groupId>
            <artifactId>DuelistMod</artifactId>
            <version>0.0.1</version>
            <scope>system</scope>
            <systemPath>${WorkshopContent.path}/1673346215/DuelistMod.jar</systemPath>
        </dependency>
        <dependency>
            <groupId>gensokyo</groupId>
            <artifactId>Gensokyo</artifactId>
            <version>0.0.1</version>
            <scope>system</scope>
            <systemPath>${WorkshopContent.path}/1943540698/Gensokyo.jar</systemPath>
        </dependency>
    </dependencies>

    <!-- This is how your code is packaged into the jar file-->
    <build>
        <finalName>${project.artifactId}</finalName>
        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-dependency-plugin</artifactId>
                <executions>
                    <execution>
                        <id>unpack</id>
                        <phase>package</phase>
                        <goals>
                            <goal>unpack</goal>
                        </goals>
                        <configuration>
                            <artifactItems>
                                <artifactItem>
                                    <groupId>dlib</groupId>
                                    <artifactId>dLib</artifactId>
                                    <version>0.0.1</version>
                                    <overWrite>true</overWrite>
                                    <outputDirectory>${project.build.directory}/classes</outputDirectory>
                                    <includes>**/*</includes>
                                </artifactItem>
                                <artifactItem>
                                    <groupId>skindex</groupId>
                                    <artifactId>skindex</artifactId>
                                    <version>0.0.1</version>
                                    <overWrite>true</overWrite>
                                    <outputDirectory>${project.build.directory}/classes</outputDirectory>
                                    <includes>**/*</includes>
                                </artifactItem>
                            </artifactItems>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-jar-plugin</artifactId>
                <version>2.4</version>
                <configuration>
                    <excludes>
                        <exclude>**/*.psd</exclude>
                        <exclude>**/*.pdn</exclude>
                    </excludes>
                    <includes>
                        <include>**/*</include> <!-- include all files -->
                    </includes>
                </configuration>
            </plugin>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-antrun-plugin</artifactId>
                <version>1.8</version>
                <executions>
                    <execution>
                        <phase>package</phase>
                        <configuration>
                            <target>
                                <!-- This moves your mod into a common folder where all mods you make can go. -->
                                <copy file="target/${project.artifactId}.jar" tofile="${Mods.path}/${project.artifactId}.jar"/>
                                <!-- <copy file="target/${project.artifactId}.jar" tofile="D:\Marino\Programs\Steam\steamapps\common\SlayTheSpire\mods/${project.artifactId}.jar"/>-->
                            </target>
                        </configuration>
                        <goals>
                            <goal>run</goal>
                        </goals>
                    </execution>
                </executions>
            </plugin>
        </plugins>

        <resources>
            <resource>
                <directory>src/main/resources</directory>
            </resource>
            <resource>
                <directory>src/main/resources</directory>
                <filtering>false</filtering>
                <excludes>
                    <exclude>ModTheSpire.json</exclude>
                </excludes>
            </resource>
            <resource>
                <directory>src/main/resources</directory>
                <filtering>true</filtering>
                <includes>
                    <include>ModTheSpire.json</include>
                </includes>
            </resource>
        </resources>
    </build>
</project>
